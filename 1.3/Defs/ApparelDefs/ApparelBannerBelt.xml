<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_BannerBeltStyleA</defName>
    <label>banner belt(style A)</label>
    <description>A belt capable of holding a banner with a flag in it.</description>
    <thingClass>Amnabi.BannerBelt</thingClass>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/ShieldBelt/ShieldBelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>2</Mass>
      <WorkToMake>4000</WorkToMake>
      <Flammability>0.4</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <costList>
      <Cloth>40</Cloth>
    </costList>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <skillRequirements>
        <Crafting>1</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
    <comps>
      <li Class="Amnabi.CompProperties_Flag">
        <offsetX>0</offsetX>
        <offsetY>-0.5</offsetY>
        <scaleX>0.8</scaleX>
        <scaleY>0.8</scaleY>
        <graphicPathStick>Things/Apparel/BannerParts/BannerBeltStick</graphicPathStick>
        <graphicPathTop>Things/Apparel/BannerParts/BannerBeltStickTop</graphicPathTop>
        <FlagDisplayType>Default</FlagDisplayType>
      </li>
    </comps>
  </ThingDef>
